{
  "manifest_version": 3,
  "name": "CSV UTF-8-sig Auto Converter",
  "version": "1.0",
  "description": "Detects CSV file downloads and helps convert them to UTF-8-sig encoding",
  "permissions": [
    "downloads",
    "storage",
    "notifications",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CSV UTF-8-sig Converter"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}